[user]
    name = David Oniani
    email = onianidavid@gmail.com
    username = oniani

[github]
    user = oniani

[core]
    editor = $EDITOR
    pager = delta
    whitespace = tabwidth=4

[init]
    defaultBranch = main

[pull]
    ff = only

[interactive]
    diffFilter = delta --color-only

[diff]
    algorithm = histogram
    indentHeuristic = true

[merge]
    conflictStyle = zdiff3

[delta]
    dark = true
    navigate = true
    line-numbers = true

[alias]
    l = "log --graph --abbrev-commit --decorate --format=format:'%C(blue)%h%C(reset) - %C(green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an <%ae>%C(reset)%C(auto)%d%C(reset)'"
    amend = "commit --amend --no-edit"
    stashls = "stash list"
    stashget = "!f() { git stash apply $(git stash list | grep $1 | cut -d ':' -f 1); }; f"
    stashpop = "!f() { git stash pop $(git stash list | grep $1 | cut -d ':' -f 1); }; f"
    stashput = "!f() { git stash push -m $1; }; f"
    squashit = "!f() { git reset --soft HEAD~$1 && git commit --edit -m \"$(git log --format=%B --reverse HEAD..HEAD@{1})\"; }; f"
    sync = "pull --rebase --autostash"
    uncommit = "!f() { git reset --soft HEAD~$1; }; f"

[help]
    autocorrect = prompt
