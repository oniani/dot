#!/usr/bin/env sh

# Author: David Oniani <onianidavid@gmail.com>
# License: MIT
# Description: installer for `nnn`, The unorthodox terminal file manager

set -e

git clone --depth 1 https://github.com/jarun/nnn
cd ./nnn/ || exit
make O_NERD=1 O_QSORT=1
mv nnn "$HOME"/.local/bin/
cd .. || exit
rm -rf ./nnn/
