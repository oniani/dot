# Keymaps
keybind = cmd+shift+f=toggle_fullscreen
keybind = ctrl+enter=text:\r
keybind = ctrl+shift+j=jump_to_prompt:1
keybind = ctrl+shift+k=jump_to_prompt:-1
keybind = global:cmd+`=toggle_quick_terminal
keybind = shift+ctrl+enter=new_tab
keybind = shift+ctrl+h=previous_tab
keybind = shift+ctrl+l=next_tab
keybind = shift+ctrl+minus=decrease_font_size:1
keybind = shift+ctrl+n=new_window
keybind = shift+ctrl+plus=increase_font_size:1

# Font
font-family = Iosevka Term
font-family = Symbols Nerd Font Mono
font-size = 20
adjust-cell-height = 4
adjust-cursor-height = 4

# Quake
quick-terminal-animation-duration = 0
quick-terminal-position = center
quick-terminal-size = 64%, 64%

# Color
theme = Nvim Dark
background = "#000000"

# Window size
window-height = 25
window-width = 115

# Window style
background-blur-radius = 32
background-opacity = 0.8

# Cursor
cursor-style = bar
cursor-style-blink = false
shell-integration-features = no-cursor

# Miscellaneous
auto-update = off
macos-option-as-alt = true
macos-titlebar-proxy-icon = hidden
macos-titlebar-style = tabs
shell-integration = zsh
