# General settings
browser "open -a safari >/dev/null 2>&1"
datetime-format "%D, %R %p"

# Key bindings
bind-key D pb-download
bind-key G end
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key N prev-unread
bind-key U show-urls
bind-key ^t next-unread
bind-key a toggle-article-read
bind-key d pagedown
bind-key g home
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key n next-unread
bind-key u pageup

# Colors
color listfocus color232 blue
color listfocus_unread color232 blue
color info blue default
