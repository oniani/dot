# Send and Receive Email {{{

set mbox_type = Maildir
set folder = "$HOME/.local/share/email/gmail/"
set send_charset = "us-ascii:utf-8"
set smtp_authenticators = "gssapi:login"

set header_cache = "$HOME/.cache/neomutt/headers"
set message_cachedir = "$HOME/.cache/neomutt/messages"

alternative_order text/plain text/html
auto_view text/html
set mailcap_path = "$HOME/.config/neomutt/mailcap:$mailcap_path"
set mime_type_query_command = "file --mime-type -b %s"

set nm_config_file = "/home/oniani/.config/notmuch/config"
set nm_default_uri = "notmuch:///home/oniani/.local/share/email"

set query_command = "abook --mutt-query '%s'"
set sleep_time = 0

set from = "onianidavid@gmail.com"
set sendmail = "msmtp --account gmail"
set signature = "$HOME/.config/neomutt/signature"

set fast_reply
set include
set reverse_name

set forward_attachments = yes
set forward_format = "Fwd: %s"
set forward_quote

set mark_old = no
set markers = no
set wait_key = no

set menu_scroll
set pager_context = 4
set pager_index_lines = 20
set pager_stop

# }}}

# Mailboxes {{{

set spoolfile = "+INBOX"
set record    = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"
set trash     = "+[Gmail]/Trash"
set mbox      = "+[Gmail]/All Mail"

named-mailboxes " ğŸ“¬ Inbox"   ="INBOX"
named-mailboxes " ğŸ“¨ Sent"    ="[Gmail]/Sent Mail"
named-mailboxes " ğŸ“Œ Pinned"  ="[Gmail]/Starred"
named-mailboxes " ğŸ“ Drafts"  ="[Gmail]/Drafts"
named-mailboxes " â›” Junk"    ="[Gmail]/Spam"
named-mailboxes " ğŸš® Trash"   ="[Gmail]/Trash"
